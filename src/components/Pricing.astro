---
import { PRICING_PLANS } from "../data/content";
import { Check } from "lucide-astro";
---

<section id="planes" class="py-32 bg-brand-black relative overflow-hidden">
  <!-- Animated Gradient Background -->
  <div
    class="absolute inset-0 bg-gradient-to-br from-brand-black via-brand-dark to-brand-black opacity-80 animate-gradient"
  >
  </div>
  <style>
    @keyframes gradient {
      0%,
      100% {
        background-position: 0% 50%;
      }
      50% {
        background-position: 100% 50%;
      }
    }
    .animate-gradient {
      background-size: 200% 200%;
      animation: gradient 8s ease infinite;
    }
  </style>
  <div class="container mx-auto px-6 relative z-10">
    <div class="mb-16 text-center">
      <h2
        class="text-5xl md:text-6xl font-heading font-black mb-6 text-white leading-tight"
      >
        Nuestros <span class="text-brand-yellow">Planes</span>
      </h2>
      <p class="text-xl font-light text-gray-400 max-w-3xl mx-auto">
        Tu mejor inversión sos vos Opciones flexibles que se adaptan a tu ritmo
        de vida.
      </p>
    </div>

    <div
      class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4 items-stretch max-w-7xl mx-auto"
    >
      {
        PRICING_PLANS.map((plan) => (
          <div
            class:list={[
              "relative p-6 rounded-3xl border transition-all duration-500 glass-panel flex flex-col",
              plan.highlight
                ? "bg-white/10 border-brand-yellow/50 shadow-[0_0_60px_-15px_rgba(250,204,21,0.2)] z-10"
                : "hover:border-brand-yellow/30 lg:scale-95",
            ]}
          >
            {plan.highlight && plan.badge && (
              <div class="absolute top-0 left-1/2 -translate-x-1/2 -translate-y-1/2 bg-brand-yellow text-black text-xs font-bold px-6 py-2 rounded-full uppercase tracking-widest shadow-lg shadow-brand-yellow/20 whitespace-nowrap">
                {plan.badge}
              </div>
            )}

            <h3 class="text-gray-400 text-sm font-bold uppercase tracking-widest mb-4 text-center">
              {plan.title}
            </h3>
            <div class="flex items-baseline gap-1 mb-8 justify-center">
              <span class="text-4xl font-black text-white">{plan.price}</span>
              <span class="text-gray-500">{plan.period}</span>
            </div>

            <ul class="space-y-6 mb-10">
              {plan.features.map((feature) => (
                <li class="flex items-center gap-4 text-gray-300">
                  <div
                    class:list={[
                      "p-1 rounded-full",
                      plan.highlight
                        ? "bg-brand-yellow/20 text-brand-yellow"
                        : "bg-white/10 text-white",
                    ]}
                  >
                    <Check size={14} />
                  </div>
                  <span class="text-sm font-medium">{feature}</span>
                </li>
              ))}
            </ul>
          </div>
        ))
      }
    </div>
    <p class="text-center text-gray-500 mt-12">
      Consultá por descuentos especiales en Nutrición para socios
    </p>
  </div>
</section>
