---
import { PRICING_PLANS } from "../data/content";
import { Check } from "lucide-astro";
---

<section
    id="planes"
    class="py-32 bg-brand-black relative overflow-hidden"
>
    <!-- Animated Gradient Background -->
    <div
        class="absolute inset-0 bg-gradient-to-br from-brand-black via-brand-dark to-brand-black opacity-80 animate-gradient"
    >
    </div>
    <style>
        @keyframes gradient {
            0%,
            100% {
                background-position: 0% 50%;
            }
            50% {
                background-position: 100% 50%;
            }
        }
        .animate-gradient {
            background-size: 200% 200%;
            animation: gradient 8s ease infinite;
        }
    </style>
    <div class="container mx-auto px-6 relative z-10">
        <div class="mb-16 text-center">
            <h2
                class="text-4xl md:text-6xl font-heading font-black mb-6 uppercase tracking-tight leading-none text-brand-yellow"
            >
                NUESTROS PLANES
            </h2>
            <p
                class="max-w-2xl mx-auto text-lg md:text-xl font-light text-gray-400"
            >
                Inversi√≥n en ti mismo. Planes flexibles para estilos de vida
                exigentes.
            </p>
        </div>

        <div class="grid lg:grid-cols-3 gap-8 items-center max-w-6xl mx-auto">
            {
                PRICING_PLANS.map((plan) => (
                    <div
                        class:list={[
                            "relative p-10 rounded-3xl border transition-all duration-500 glass-panel",
                            plan.highlight
                                ? "bg-white/10 border-brand-yellow/50 shadow-[0_0_60px_-15px_rgba(250,204,21,0.2)] lg:scale-110 z-10"
                                : "hover:border-brand-yellow/30",
                        ]}
                    >
                        {plan.highlight && plan.badge && (
                            <div class="absolute top-0 left-1/2 -translate-x-1/2 -translate-y-1/2 bg-brand-yellow text-black text-xs font-bold px-6 py-2 rounded-full uppercase tracking-widest shadow-lg shadow-brand-yellow/20">
                                {plan.badge}
                            </div>
                        )}

                        <h3 class="text-gray-400 text-sm font-bold uppercase tracking-widest mb-4">
                            {plan.title}
                        </h3>
                        <div class="flex items-baseline gap-1 mb-8">
                            <span class="text-5xl font-black text-white">
                                {plan.price}
                            </span>
                            <span class="text-gray-500">
                                {plan.period}
                            </span>
                        </div>

                        <ul class="space-y-6 mb-10">
                            {plan.features.map((feature) => (
                                <li class="flex items-center gap-4 text-gray-300">
                                    <div
                                        class:list={[
                                            "p-1 rounded-full",
                                            plan.highlight
                                                ? "bg-brand-yellow/20 text-brand-yellow"
                                                : "bg-white/10 text-white",
                                        ]}
                                    >
                                        <Check size={14} />
                                    </div>
                                    <span class="text-sm font-medium">
                                        {feature}
                                    </span>
                                </li>
                            ))}
                        </ul>

                        <button
                            class:list={[
                                "w-full px-10 py-4 rounded-full font-bold transition-all duration-300 transform hover:-translate-y-1 hover:shadow-2xl flex items-center gap-2 justify-center tracking-wide text-sm uppercase",
                                plan.highlight
                                    ? "bg-brand-yellow text-black hover:bg-white hover:text-black shadow-lg shadow-brand-yellow/20"
                                    : "bg-transparent border border-white/30 text-white hover:bg-white hover:text-black",
                            ]}
                        >
                            Seleccionar
                        </button>
                    </div>
                ))
            }
        </div>
    </div>
</section>
