<div
  id="preloader"
  class="fixed inset-0 z-[100] flex items-center justify-center bg-brand-blue transition-opacity duration-500"
>
  <div class="relative flex flex-col items-center">
    <!-- Logo with Pulse Effect -->
    <img
      src="/images/logo-light.png"
      alt="Loading..."
      class="h-24 w-auto animate-pulse-glow object-contain drop-shadow-[0_0_20px_rgba(250,204,21,0.5)]"
    />
    <!-- Loading Bar / Indicator (Optional, subtle) -->
    <div class="mt-8 h-1 w-48 overflow-hidden rounded-full bg-white/10">
      <div
        class="h-full w-full animate-[shimmer_1.5s_infinite] bg-gradient-to-r from-transparent via-brand-yellow to-transparent -translate-x-full"
      >
      </div>
    </div>
  </div>
</div>

<script>
  // Hide preloader when window is fully loaded
  window.addEventListener("load", () => {
    const preloader = document.getElementById("preloader");

    if (preloader) {
      // Minimum display time to prevent flickering on fast connections
      setTimeout(() => {
        preloader.classList.add("opacity-0");
        preloader.classList.add("pointer-events-none");

        // Remove from DOM after transition
        setTimeout(() => {
          preloader.style.display = "none";
        }, 500);
      }, 800); // Wait at least 800ms
    }
  });
</script>

<style>
  @keyframes shimmer {
    100% {
      transform: translateX(100%);
    }
  }
</style>
