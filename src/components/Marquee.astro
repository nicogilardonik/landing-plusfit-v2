---
const marqueeItems = [
  "Entrenamiento personalizado",
  "Equipo de última generación",
  "Familia Fitness",
  "Nutrición de calidad",
];
---

<div
  class="relative flex overflow-x-hidden bg-brand-black py-6 text-white uppercase font-black tracking-[0.2em] text-sm md:text-base border-y border-white/10"
>
  <div class="animate-marquee whitespace-nowrap flex gap-12 items-center">
    {
      marqueeItems.map((item) => (
        <>
          <span class="mx-4 text-gray-300 hover:text-white transition-colors">
            {item}
          </span>
          <span class="text-brand-yellow animate-pulse-glow">★</span>
        </>
      ))
    }
    {
      marqueeItems.map((item) => (
        <>
          <span class="mx-4 text-gray-300 hover:text-white transition-colors">
            {item}
          </span>
          <span class="text-brand-yellow animate-pulse-glow">★</span>
        </>
      ))
    }
  </div>
</div>
