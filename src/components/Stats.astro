---
import { STATS } from "../data/content";
---

<section class="py-20 bg-[#0a0a0a] border-b border-white/5">
    <div class="container mx-auto px-6">
        <div class="grid grid-cols-2 md:grid-cols-4 gap-12 text-center">
            {
                STATS.map((stat) => (
                    <div class="group cursor-default">
                        <h3 class="text-4xl md:text-6xl font-black text-white mb-2 group-hover:text-orange-500 transition-colors duration-300">
                            {stat.value}
                        </h3>
                        <p class="text-gray-500 text-sm uppercase tracking-widest font-bold">
                            {stat.label}
                        </p>
                    </div>
                ))
            }
        </div>
    </div>
</section>
