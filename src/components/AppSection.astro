---
import { Clipboard, Calendar, Award } from "lucide-astro";

const features = [
    {
        icon: Clipboard,
        title: "Tu rutina personalizada",
        description:
            "Accede a tu plan de entrenamiento con ejercicios detallados y videos demostrativos paso a paso.",
    },
    {
        icon: Calendar,
        title: "Autogestión de horarios",
        description:
            "Reserva tus sesiones de entrenamiento según tu disponibilidad en tiempo real.",
    },
    {
        icon: Award,
        title: "Sistema de premios",
        description:
            "Gana recompensas por tu constancia. Acumula puntos por días asistidos y canjéalos por beneficios.",
    },
];
---

<section id="app" class="py-12 bg-white dark:bg-black relative overflow-hidden">
    <!-- Background Subtle Gradient -->
    <div
        class="absolute inset-0 bg-gradient-to-b from-white via-[#e0f7f7] to-white dark:from-black dark:via-[#051a1a] dark:to-black opacity-90 z-0"
    >
    </div>

    <div class="container mx-auto px-4 relative z-10">
        <div class="text-center mb-12">
            <h2
                class="text-5xl font-black mb-6 text-[#2b9ce3] dark:text-[#2b9ce3] leading-tight"
                style="font-family: 'APEXPRO', sans-serif;"
            >
                Gestiona tu entrenamiento desde tu celular
            </h2>
            <p
                class="text-xl font-bold text-gray-600 dark:text-gray-400 max-w-3xl mx-auto"
            >
                Nuestra app exclusiva te da el control total de tu experiencia
                fitness
            </p>
        </div>

        <div class="grid lg:grid-cols-2 gap-12 items-center max-w-7xl mx-auto">
            <!-- Features -->
            <div class="space-y-6">
                {
                    features.map((feature) => (
                        <div class="bg-white dark:bg-gray-800 rounded-2xl p-6 shadow-lg hover:shadow-xl transition-all duration-300 group">
                            <div class="flex gap-4">
                                <div class="flex-shrink-0">
                                    <div class="w-14 h-14 bg-cyan-500/10 dark:bg-cyan-500/20 rounded-xl flex items-center justify-center group-hover:bg-cyan-500 transition-colors duration-300">
                                        <feature.icon class="w-7 h-7 text-cyan-500 group-hover:text-white transition-colors duration-300" />
                                    </div>
                                </div>
                                <div class="flex-1">
                                    <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-2">
                                        {feature.title}
                                    </h3>
                                    <p class="text-gray-600 dark:text-gray-400 leading-relaxed">
                                        {feature.description}
                                    </p>
                                </div>
                            </div>
                        </div>
                    ))
                }
            </div>

            <!-- Phone Mockup -->
            <div class="flex justify-center lg:justify-end phone-perspective">
                <div class="relative phone-float">
                    <!-- Phone frame - iPhone 15 Pro style -->
                    <div
                        class="relative w-[300px] h-[610px] bg-gradient-to-br from-gray-800 to-gray-900 rounded-[3.5rem] p-3 shadow-2xl transition-all duration-500 phone-3d"
                    >
                        <div
                            class="w-full h-full rounded-[3rem] overflow-hidden relative flex items-center justify-center bg-gradient-to-b from-[#1a1d29] via-[#141620] to-[#0f1118]"
                        >
                            <!-- App Screenshot -->
                            <img
                                src="/images/logo-app.png"
                                alt="App +FIT"
                                class="w-full h-full object-cover"
                            />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    @keyframes float {
        0%,
        100% {
            transform: translateY(0px) rotateY(-12deg) rotateX(5deg);
        }
        50% {
            transform: translateY(-20px) rotateY(-12deg) rotateX(5deg);
        }
    }

    .phone-perspective {
        perspective: 1500px;
        perspective-origin: center;
    }

    .phone-float {
        animation: float 3s ease-in-out infinite;
        transform-style: preserve-3d;
    }

    .phone-3d {
        transform-style: preserve-3d;
        box-shadow:
            -25px 35px 60px rgba(0, 0, 0, 0.5),
            -15px 20px 40px rgba(0, 0, 0, 0.3),
            -5px 10px 20px rgba(0, 0, 0, 0.2),
            inset -3px 0 8px rgba(0, 0, 0, 0.4),
            inset 0 2px 4px rgba(255, 255, 255, 0.1);
    }

    .phone-3d:hover {
        transform: translateY(0) rotateY(-5deg) rotateX(2deg) scale(1.05);
        box-shadow:
            -30px 40px 70px rgba(0, 0, 0, 0.6),
            -20px 25px 50px rgba(0, 0, 0, 0.4),
            -8px 12px 25px rgba(0, 0, 0, 0.3),
            inset -3px 0 8px rgba(0, 0, 0, 0.4),
            inset 0 2px 4px rgba(255, 255, 255, 0.1);
    }
</style>
