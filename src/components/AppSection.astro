---
import { Clipboard, Calendar, Award } from "lucide-astro";

const features = [
    {
        icon: Clipboard,
        title: "Tu rutina personalizada",
        description:
            "Accede a tu plan de entrenamiento con ejercicios detallados y videos demostrativos paso a paso.",
    },
    {
        icon: Calendar,
        title: "Autogestión de horarios",
        description:
            "Reserva tus sesiones de entrenamiento según tu disponibilidad en tiempo real.",
    },
    {
        icon: Award,
        title: "Sistema de premios",
        description:
            "Gana recompensas por tu constancia. Acumula puntos por días asistidos y canjéalos por beneficios.",
    },
];
---

<section id="app" class="py-24 relative overflow-hidden bg-brand-black">
    <!-- Background Subtle Gradient -->
    <div class="absolute inset-0 bg-gradient-to-t from-brand-black via-brand-dark to-brand-black z-0"></div>
    <div class="absolute top-1/2 left-0 w-full h-[500px] bg-brand-yellow/5 blur-[150px] pointer-events-none"></div>

    <div class="container mx-auto px-4 relative z-10">
        <div class="text-center mb-16">
            <h2
                class="text-5xl md:text-6xl font-heading font-black mb-6 text-white leading-tight"
            >
                Gestiona tu entrenamiento <br/>
                <span class="text-brand-yellow">desde tu celular</span>
            </h2>
            <p
                class="text-xl font-light text-gray-400 max-w-3xl mx-auto"
            >
                Nuestra app exclusiva te da el control total de tu experiencia fitness.
            </p>
        </div>

        <div class="grid lg:grid-cols-2 gap-16 items-center max-w-7xl mx-auto">
            <!-- Features -->
            <div class="space-y-6">
                {
                    features.map((feature) => (
                        <div class="glass-panel rounded-2xl p-6 transition-all duration-300 group hover:border-brand-yellow/30 hover:-translate-y-1">
                            <div class="flex gap-6">
                                <div class="flex-shrink-0">
                                    <div class="w-14 h-14 bg-brand-yellow/10 rounded-xl flex items-center justify-center group-hover:bg-brand-yellow/20 group-hover:shadow-[0_0_20px_rgba(250,204,21,0.3)] transition-all duration-300">
                                        <feature.icon class="w-7 h-7 text-brand-yellow group-hover:scale-110 transition-transform duration-300" />
                                    </div>
                                </div>
                                <div class="flex-1">
                                    <h3 class="text-xl font-bold text-white mb-2 group-hover:text-brand-yellow transition-colors">
                                        {feature.title}
                                    </h3>
                                    <p class="text-gray-400 leading-relaxed group-hover:text-gray-300 transition-colors">
                                        {feature.description}
                                    </p>
                                </div>
                            </div>
                        </div>
                    ))
                }
            </div>

            <!-- Phone Mockup -->
            <div class="flex justify-center lg:justify-end phone-perspective">
                <div class="relative phone-float">
                    <!-- Phone frame - iPhone 15 Pro style -->
                    <div
                        class="relative w-[320px] h-[650px] bg-gradient-to-br from-gray-800 to-gray-950 rounded-[3.5rem] p-3 shadow-2xl transition-all duration-500 phone-3d border border-white/10"
                    >
                        <!-- Dynamic Island / Notch Placeholder -->
                        <div class="absolute top-6 left-1/2 -translate-x-1/2 w-28 h-7 bg-black rounded-full z-20"></div>

                        <div
                            class="w-full h-full rounded-[3rem] overflow-hidden relative flex items-center justify-center bg-black"
                        >
                            <!-- App Screenshot -->
                            <img
                                src="/images/logo-app.png"
                                alt="App +FIT"
                                class="w-full h-full object-cover opacity-90 hover:opacity-100 transition-opacity duration-500"
                            />
                            <!-- Reflection Overlay -->
                            <div class="absolute inset-0 bg-gradient-to-tr from-transparent via-white/5 to-transparent pointer-events-none"></div>
                        </div>
                    </div>
                    <!-- Glow behind phone -->
                    <div class="absolute inset-0 bg-brand-yellow/20 blur-[60px] -z-10 animate-pulse-glow"></div>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    @keyframes float {
        0%,
        100% {
            transform: translateY(0px) rotateY(-12deg) rotateX(5deg);
        }
        50% {
            transform: translateY(-20px) rotateY(-12deg) rotateX(5deg);
        }
    }

    .phone-perspective {
        perspective: 1500px;
        perspective-origin: center;
    }

    .phone-float {
        animation: float 3s ease-in-out infinite;
        transform-style: preserve-3d;
    }

    .phone-3d {
        transform-style: preserve-3d;
        box-shadow:
            -25px 35px 60px rgba(0, 0, 0, 0.5),
            -15px 20px 40px rgba(0, 0, 0, 0.3),
            -5px 10px 20px rgba(0, 0, 0, 0.2),
            inset -3px 0 8px rgba(0, 0, 0, 0.4),
            inset 0 2px 4px rgba(255, 255, 255, 0.1);
    }

    .phone-3d:hover {
        transform: translateY(0) rotateY(-5deg) rotateX(2deg) scale(1.05);
        box-shadow:
            -30px 40px 70px rgba(0, 0, 0, 0.6),
            -20px 25px 50px rgba(0, 0, 0, 0.4),
            -8px 12px 25px rgba(0, 0, 0, 0.3),
            inset -3px 0 8px rgba(0, 0, 0, 0.4),
            inset 0 2px 4px rgba(255, 255, 255, 0.1);
    }
</style>
